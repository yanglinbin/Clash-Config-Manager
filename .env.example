# Clash 配置管理器 - 环境变量配置示例
# 复制此文件为 .env 并根据实际情况修改

# ==================== 应用配置 ====================
# 应用监听端口
APP_PORT=5000

# 日志级别 (debug, info, warning, error)
LOG_LEVEL=info

# 时区设置
TZ=Asia/Shanghai

# ==================== 更新配置 ====================
# 自动更新间隔（秒）
UPDATE_INTERVAL=3600

# GitHub Webhook 密钥
WEBHOOK_SECRET=

# ==================== Nginx 配置（可选） ====================
# Nginx HTTP 端口
NGINX_HTTP_PORT=80

# Nginx HTTPS 端口
NGINX_HTTPS_PORT=443

# 域名
DOMAIN=

# ==================== 备份配置 ====================
# 自动备份数量
BACKUP_COUNT=10
