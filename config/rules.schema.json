{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Clash Rules Configuration Schema",
  "description": "Schema for rules.yaml configuration file with proper YAML indentation (2 spaces)",
  "type": "object",
  "$comment": "YAML formatting rules: Use 2-space indentation, no tabs, consistent spacing for lists and objects",
  "properties": {
    "rule-providers": {
      "type": "object",
      "description": "Rule providers configuration",
      "patternProperties": {
        "^[a-zA-Z0-9_-]+$": {
          "type": "object",
          "properties": {
            "type": {
              "type": "string",
              "enum": ["http", "file"]
            },
            "behavior": {
              "type": "string",
              "enum": ["domain", "ipcidr", "classical"]
            },
            "url": {
              "type": "string",
              "format": "uri"
            },
            "path": {
              "type": "string"
            },
            "interval": {
              "type": "integer",
              "minimum": 60
            }
          },
          "required": ["type", "behavior", "path"],
          "additionalProperties": false
        }
      }
    },
    "proxy_groups": {
      "type": "array",
      "description": "Proxy groups configuration",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "minLength": 1
          },
          "type": {
            "type": "string",
            "enum": ["select", "url-test", "fallback", "load-balance", "relay"]
          },
          "use": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "proxies": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "url": {
            "type": "string",
            "format": "uri"
          },
          "interval": {
            "type": "integer",
            "minimum": 60
          },
          "tolerance": {
            "type": "integer",
            "minimum": 0
          },
          "lazy": {
            "type": "boolean"
          },
          "disable-udp": {
            "type": "boolean"
          },
          "filter": {
            "type": "string"
          },
          "exclude-filter": {
            "type": "string"
          },
          "description": {
            "type": "string"
          }
        },
        "required": ["name", "type"],
        "additionalProperties": false
      }
    },
    "custom_rules": {
      "type": "array",
      "description": "Custom rules as flat array with 2-space indentation (  - RULE-TYPE,param,proxy-group)",
      "items": {
        "type": "string",
        "pattern": "^(DOMAIN|DOMAIN-SUFFIX|DOMAIN-KEYWORD|IP-CIDR|IP-CIDR6|GEOIP|SRC-IP-CIDR|SRC-PORT|DST-PORT|PROCESS-NAME|PROCESS-PATH|RULE-SET|MATCH|AND|OR|NOT|SUB-RULE),",
        "examples": [
          "DOMAIN-SUFFIX,example.com,üöÄÊµ∑Â§ñ‰ª£ÁêÜ",
          "IP-CIDR,192.168.1.0/24,üåêÂÖ®ÁêÉÁõ¥Ëøû",
          "PROCESS-NAME,chrome.exe,üöÄÊµ∑Â§ñ‰ª£ÁêÜ"
        ]
      }
    },
    "ruleset_rules": {
      "type": "array",
      "description": "Rule-set reference rules",
      "items": {
        "type": "string",
        "pattern": "^(RULE-SET|GEOIP|MATCH),"
      }
    }
  },
  "required": ["rule-providers", "proxy_groups", "custom_rules", "ruleset_rules"],
  "additionalProperties": false
}
